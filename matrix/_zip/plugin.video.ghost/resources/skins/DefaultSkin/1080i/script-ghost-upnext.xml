<?xml version="1.0" encoding="UTF-8"?>
<window>
	<defaultcontrol always="true">3012</defaultcontrol>
	<onload>Dialog.Close(fullscreeninfo,true)</onload>
	<onload>Dialog.Close(videoosd,true)</onload>
	<controls>
		<control type="group">
			<animation type="WindowOpen" reversible="false">
				<effect type="fade" start="0" end="100" time="400" />
				<effect type="slide" start="0,-181" end="0,0" time="400" />
			</animation>
			<animation type="WindowClose" reversible="false">
				<effect type="fade" start="100" end="0" time="400" />
				<effect type="slide" start="0,0" end="0,-181" time="400" />
			</animation>


			
			<control type="group">
				<height>181</height>
				<!-- Background -->

				<control type="image">
					<top>0</top>
					<width>100%</width>
					<height>181</height>
					<texture colordiffuse="dd000000">bg.png</texture>
				</control>
				<!-- Thumb -->
				<control type="group">
					<top>20</top>
					<left>20</left>
					<control type="image">
						<top>-2</top>
						<left>-2</left>
						<width>254</width>
						<height>144</height>
						<texture>ghost.png</texture>
					</control>
					<control type="image">
						<width>250</width>
						<height>141</height>
						<texture colordiffuse="FF12A0C7">white.jpg</texture>
						<visible>String.IsEmpty(Window.Property(thumb)) + String.IsEmpty(Window.Property(landscape)) + String.IsEmpty(Window.Property(fanart))</visible>
					</control>
					<control type="textbox">
						<top>-20</top>
						<left>1000</left>
						<width>430</width>
						<height>110</height>
						<font>font12</font>
						<textcolor>ffffffff</textcolor>
						<ghostcolor>00000000</ghostcolor>
						<align>right</align>
						<autoscroll delay="3000" time="3000" repeat="10000">!Control.HasFocus(13)</autoscroll>
						<label>$INFO[Window.Property(plot)]</label>
						<visible>true</visible>
					</control>
					<control type="image">
						<width>250</width>
						<height>141</height>
						<texture>$INFO[Window.Property(landscape)]</texture>
						<aspectratio>scale</aspectratio>
					</control>
					<control type="image">
						<width>250</width>
						<height>141</height>
						<texture>$INFO[Window.Property(fanart)]</texture>
						<aspectratio>scale</aspectratio>
						<visible>String.IsEmpty(Window.Property(landscape))</visible>
					</control>
					<control type="image">
						<width>250</width>
						<height>141</height>
						<texture>$INFO[Window.Property(thumb)]</texture>
						<aspectratio>scale</aspectratio>
						<visible>String.IsEmpty(Window.Property(landscape)) + String.IsEmpty(Window.Property(fanart))</visible>
					</control>
					<control type="progress" id="3014">
						<width>250</width>
						<top>136</top>
						<left>0</left>
						<height>10</height>
						<reveal>true</reveal>
						<righttexture></righttexture>
						<overlaytexture></overlaytexture>
						<lefttexture></lefttexture>
						<texturebg colordiffuse="00ffffff">close.jpg</texturebg>
						<midtexture colordiffuse="FFFF4081">white.jpg</midtexture>
					</control>
				</control>
				<!-- Labels -->
				<control type="group">
					<top>20</top>
					<left>290</left>
					<right>20</right>
					<control type="button" id="3012">
							<label>$ADDON[plugin.video.ghost 32272]</label>
							<height>56</height>
							<posx>30</posx>
						    <posy>80</posy>
							<onleft>3000</onleft>
							<onright>3013</onright>
							<width>300</width>
							<font>font20_title</font>
							<textoffsetx>55</textoffsetx>
							<textcolor>ddffffff</textcolor>
							<focusedcolor>eeffffff</focusedcolor>
							<selectedcolor>ddffffff</selectedcolor>
							<ghostcolor>22000000</ghostcolor>
							<aligny>center</aligny>
							<align>center</align>
							<texturefocus border="10" colordiffuse="FF172A91">button.png</texturefocus>
							<texturenofocus border="10" colordiffuse="FF212121">button.png</texturenofocus>
							<alttexturefocus border="10" colordiffuse="FF172A91">button.png</alttexturefocus>
							<alttexturenofocus border="10" colordiffuse="FF212121">button.png</alttexturenofocus>
							<pulseonselect>no</pulseonselect>
						</control>
						<control type="button" id="3013">
							<label>$ADDON[plugin.video.ghost 32271]</label>
							<height>56</height>
							<posx>360</posx>
						    <posy>80</posy>
							<onleft>3012</onleft>
							<onright>3000</onright>
				
							<width>150</width>
							<font>font20_title</font>
							<textoffsetx>15</textoffsetx>
							<textcolor>ddffffff</textcolor>
							<focusedcolor>eeffffff</focusedcolor>
							<selectedcolor>ddffffff</selectedcolor>
							<ghostcolor>22000000</ghostcolor>
							<aligny>center</aligny>
							<align>center</align>
							<texturefocus border="10" colordiffuse="FF172A91">button.png</texturefocus>
							<texturenofocus border="10" colordiffuse="FF212121">button.png</texturenofocus>
							<alttexturefocus border="10" colordiffuse="FF172A91">button.png</alttexturefocus>
							<alttexturenofocus border="10" colordiffuse="FF212121">button.png</alttexturenofocus>
							<pulseonselect>no</pulseonselect>
						</control>
					</control>
					<control type="list" id="3000">
						<description>List to hold 'buttons'</description>
						<posx>1450</posx>
						<posy>0</posy>
						<width>500</width>
						<height>150</height>
						<onright>3012</onright>
						<onleft>3013</onleft>  
						<viewtype label="3D list">list</viewtype>
						<pagecontrol>105</pagecontrol>
						<itemlayout width="500" height="50">                
							<control type="image">
								<posx>0</posx>
								<posy>0</posy>
								<width>400</width>
								<height>50</height>
								<texture border="5">button-nofocus.png</texture>
							</control>
							
							
							
							
							
						   <control type="label">
								
								<posx>5</posx>
								<posy>0</posy>
								<width>400</width>
								<height>38</height>
								<font>fontContextMenu</font>
					
								<textcolor>white</textcolor>
								<aligny>center</aligny>		    
								<align>left</align>
								<info>ListItem.Label</info>
							</control>
						<!-- [server/] -->
						  
						   
						   
					   </itemlayout>
			
					   <focusedlayout width="500" height="50">

							
							<control type="image">
								<visible>Control.HasFocus(3000)</visible>
								<posx>0</posx>
								<posy>0</posy>
								<width>400</width>
								<height>50</height>                                 
								<texture border="5" fallback="button-focus2.png">button-focus.png</texture>
							</control>
							<control type="label">
								
								<posx>5</posx>
								<posy>0</posy>
								<width>500</width>
								<height>38</height>
								<font>fontContextMenu</font>
					
								<textcolor>white</textcolor>
								<aligny>center</aligny>		    
								<align>left</align>
								<info>ListItem.Label</info>
							</control>
						</focusedlayout>
					</control>  
					<!-- Time -->
					<control type="label" id="3015">
						<top>80</top>
						<width>auto</width>
						<height>35</height>
						<left>790</left>
						<aligny>center</aligny>
						<font>font25_title</font>
						<textcolor>eeffffff</textcolor>
						<ghostcolor>00000000</ghostcolor>
						
						
					</control>
					<control type="label">
						<top>120</top>
						<width>auto</width>
						<height>35</height>
						<left>790</left>
						<aligny>center</aligny>
						<font>font25_title</font>
						<textcolor>eeffffff</textcolor>
						<ghostcolor>00000000</ghostcolor>
						<label>$ADDON[plugin.video.ghost 32270] [COLOR FFFF4081]$INFO[Player.TimeRemaining,,][/COLOR]</label>
						
					</control>
					<!-- Details -->
					<control type="grouplist">
						<orientation>horizontal</orientation>
						<height>35</height>
						<top>10</top>
						<left>320</left>
						<itemgap>0</itemgap>
						<control type="label">
							<width>auto</width>
							<height>35</height>
							<aligny>center</aligny>
							<font>font12</font>
							<textcolor>eeffffff</textcolor>
							<ghostcolor>00000000</ghostcolor>
							<label>$INFO[Window.Property(tvshowtitle),, - ]  </label>
							<visible>true</visible>
						</control>
						<control type="label">
							<width>auto</width>
							<height>35</height>
							<aligny>center</aligny>
							<font>font12</font>
							<textcolor>eeffffff</textcolor>
							<ghostcolor>00000000</ghostcolor>
							<label>$INFO[Window.Property(year),,   ]</label>
							<visible>!String.IsEmpty(Window.Property(year))</visible>
						</control>
						<control type="image">
							<width>19</width>
							<height>19</height>
							<aspect>keep</aspect>
							<texture colordiffuse="FFFF4081">star.png</texture>
							<animation effect="slide" end="0,8" time="0" condition="true">Conditional</animation>
							<visible>!String.IsEmpty(Window.Property(rating))</visible>
						</control>
						<control type="label">
							<width>auto</width>
							<height>35</height>
							<aligny>center</aligny>
							<label>$INFO[Window.Property(rating), ,   ]</label>
							<font>font12</font>
							<textcolor>eeffffff</textcolor>
							<ghostcolor>00000000</ghostcolor>
							<visible>!String.IsEmpty(Window.Property(rating))</visible>
						</control>
					</control>
					<!-- Buttons -->
					<control type="grouplist">
						<orientation>horizontal</orientation>
						<height>56</height>
						<bottom>20</bottom>
						<itemgap>10</itemgap>
						
					<control type="image">
						<bottom>20</bottom>
						<width>46</width>
						<height>46</height>
						<aspect>keep</aspect>
						<texture colordiffuse="ddffffff">00.png</texture>
						<animation effect="slide" end="13,-5" time="0" condition="true">Conditional</animation>
					</control>
				</control>
			</control>
		</control>
	</controls>
</window>